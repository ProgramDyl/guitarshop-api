generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Skateboard {
  product_id      Int      @id      
  name            String   @unique
  description     String   
  style           String
  size            Int
  wheelbase       Decimal  @default(0.00)
  cost            Decimal  @default(0.00)
  image_filename  String
  createdAt       DateTime @default(now())  
  updatedAt       DateTime @updatedAt
}

model customer {
  customer_id     Int      @id @default(autoincrement())
  email           String   @unique
  password        String
  first_name      String
  last_name       String
}
